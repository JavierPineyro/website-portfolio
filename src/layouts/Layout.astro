---
import Email from '@components/icons/Email.astro'
import Github from '@components/icons/Github.astro'
import LinkedIn from '@components/icons/LinkedIn.astro'
import ExternalLink from '@components/ui/ExternalLink.astro'

type Props = {
  title: string
  description: string
}

const { title, description } = Astro.props
const IS_DEVELOPMENT = import.meta.env.DEV
---

<html class="scroll-smooth" lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon-j.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body id="body_to_scroll">
    <div class="relative animate-fadeIn min-h-screen">
      {
        !IS_DEVELOPMENT && (
          <p class="fixed z-9999 bg-navigation/95 rounded-xl left-8 bottom-8 before:content-['ðŸ”¨'] text-center text-yellow-300 border-[1px] border-yellow-300 p-3">
            Sitio web en construcciÃ³nðŸ”¨
          </p>
        )
      }
      <div
        class="fixed z-9999 bg-navigation/95 rounded-xl right-4 bottom-20 sm:right-4 sm:bottom-20 text-center"
      >
        <ExternalLink
          className=" hover:text-main active:text-light-main text-white rounded  px-4 py-1"
          seoTitle="LinkedIn Profile"
          url="https://www.linkedin.com/in/dario-javier-piÃ±eyro"
        >
          <LinkedIn width="24" height="24" />
        </ExternalLink>
        <ExternalLink
          className="hover:text-main active:text-light-main text-white rounded  px-4 py-1"
          seoTitle="Email address"
          url="mailto:dariojavierpineyro@gmail.com?subject='Propuesta de Trabajo para Javier PiÃ±eyro'"
        >
          <Email width="28" height="28" />
        </ExternalLink>
        <ExternalLink
          className="hover:text-main group text-white rounded px-4 py-1"
          seoTitle="Github Profile"
          url="https://github.com/javierpineyro"
        >
          <Github
            width="26"
            height="26"
            classNames="fill-white group-active:fill-light-main group-hover:fill-main"
          />
        </ExternalLink>
      </div>
      <slot />
    </div>
  </body>
</html>

<style>
  html,
  body {
    background-color: #151515;
    scroll-behavior: smooth;
  }

  #body_to_scroll::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
    border-radius: 10px;
    background-color: #151515;
  }

  #body_to_scroll::-webkit-scrollbar {
    width: 12px;
    background-color: #151515;
  }

  #body_to_scroll::-webkit-scrollbar-thumb {
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
    background-color: #fb7185;
  }

  @media (max-width: 550px) {
    body {
      background-image: radial-gradient(#fb718599 1px, transparent 1px),
        radial-gradient(#fb718599 1px, transparent 1px);
      background-position: 0 0, 25px 25px;
      background-size: 50px 50px;
    }
  }
</style>
