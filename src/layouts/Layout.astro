---
import Building from '@components/ui/Building.astro'
import Social from '@components/ui/Social.astro'

type Props = {
  title: string
  description: string
}

const { title, description } = Astro.props
---

<html class="scroll-smooth" lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon-j.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body id="body_to_scroll">
    <div class="relative animate-fadeIn min-h-screen">
      <Building />
      <Social />
      <slot />
    </div>
  </body>
</html>

<style>
  html,
  body {
    background-color: #151515;
    scroll-behavior: smooth;
  }

  #body_to_scroll::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
    border-radius: 10px;
    background-color: #151515;
  }

  #body_to_scroll::-webkit-scrollbar {
    width: 12px;
    background-color: #151515;
  }

  #body_to_scroll::-webkit-scrollbar-thumb {
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
    background-color: #fb7185;
  }

  @media (max-width: 550px) {
    body {
      background-image: radial-gradient(#fb71867c 1px, transparent 1px),
        radial-gradient(#fb71867c 1px, transparent 1px);
      background-position: 0 0, 25px 25px;
      background-size: 50px 50px;
    }
  }
</style>
