---
import Hero from '@components/Hero.astro'
import Projects from '@components/Projects.astro'
import Tecnologies from '@components/Tecnologies.astro'
import AboutMe from '@components/AboutMe.astro'
---

<main class="sm:p-0 mx-auto">
  <div id="hero_container" class="sm:min-h-screen sm:pt-36 w-full">
    <Hero />
  </div>
  <div class="sm:max-w-5xl mx-auto p-4 sm:pt-2">
    <Projects />
    <Tecnologies />
    <AboutMe />
  </div>
</main>

<style>
  @media (min-width: 640px) {
    #hero_container {
      background-image: radial-gradient(#fb718681 1px, transparent 1px),
        radial-gradient(#fb718681 1px, transparent 1px);
      background-position: 0 0, 25px 25px;
      background-size: 50px 50px;
    }
  }
</style>
