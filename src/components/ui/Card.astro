---
import ExternalLink from '@components/ui/ExternalLink.astro'
import Github from '@components/icons/Github.astro'
import LogosLink from '@components/ui/LogosLink.astro'
import Tag from '@components/ui/Tag.astro'
import ArrowIcon from '@components/icons/ArrowIcon.astro'

type Props = {
  title: string
  description: string
  url: string
  repo: string
  stack: Array<{ name: string; color: string }>
  className?: string
}

const { title, description, stack, url, repo, className } = Astro.props
---

<div
  class={`bg-primary flex flex-col gap-2 border-gray-400 py-4 px-3 text-gray-400 border-[1px] rounded ${className}`}
>
  <div class="flex justify-between">
    <ExternalLink
      url={url}
      className="text-white font-semibold hover:text-cyan-500 hover:underline active:text-sky-600"
    >
      {title}
      <ArrowIcon />
    </ExternalLink>
    <LogosLink url={repo}>
      <Github
        width="20"
        height="20"
        seoTitle="Repository"
        classNames="fill-gray-400 hover:fill-cyan-500 transition"
      />
    </LogosLink>
  </div>
  <p class="text-sm mb-2">{description}</p>
  <div class="flex gap-1 sm:gap-2">
    {
      stack.map((item) => {
        return <Tag className={`${item.color}`}>{item.name}</Tag>
      })
    }
  </div>
</div>
