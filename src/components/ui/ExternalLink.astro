---
type Props = {
  url: string
  seoTitle?: string
  className?: string
}
const { url, seoTitle, className } = Astro.props
---

<a
  class={`transition flex justify-center items-center gap-2 group ${className}`}
  href={url}
  target="_blank"
  title={seoTitle}
  rel="noopener noreferrer"
>
  <slot />
</a>
