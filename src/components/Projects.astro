---
import Subtitle from '@components/ui/Subtitle.astro'
import Card from './ui/Card.astro'

import { Projects } from 'src/utils/data'
---

<section
  id="proyectos"
  class="flex flex-col gap-6 text-white mt-10 mb-10 sm:mt-20 sm:mb-20"
>
  <Subtitle>Proyectos</Subtitle>
  <div class="flex flex-col gap-6 sm:grid sm:grid-cols-2">
    {
      Projects.map((item) => {
        return (
          <Card
            className=""
            title={item.title}
            stack={item.stack}
            description={item.description}
            url={item.url}
            repo={item.repo}
          />
        )
      })
    }
  </div>
</section>
